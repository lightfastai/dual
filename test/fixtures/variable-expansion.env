# Test file for variable expansion features

# Basic expansion
PROTOCOL=https
DOMAIN=example.com
PORT=3000
BASE_URL=${PROTOCOL}://${DOMAIN}:${PORT}
API_ENDPOINT=$BASE_URL/api/v1

# Nested expansion
APP_NAME=MyApp
VERSION=1.0.0
FULL_NAME=${APP_NAME}-${VERSION}
USER_AGENT="${FULL_NAME} (${DOMAIN})"

# Expansion in different quote styles
DOUBLE_QUOTE_EXPAND="Server: ${APP_NAME}"
SINGLE_QUOTE_NO_EXPAND='Server: ${APP_NAME}'

# Multiple variable references
DB_USER=admin
DB_PASS=secret
DB_HOST=localhost
DB_PORT=5432
DB_NAME=myapp
DATABASE_URL=postgresql://${DB_USER}:${DB_PASS}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Reference undefined variables (expand to empty)
UNDEFINED_REF=${UNDEFINED_VAR}
MIXED_REF=${APP_NAME}_${UNDEFINED_VAR}_suffix

# Circular references (godotenv should handle gracefully)
VAR_A=$VAR_B
VAR_B=$VAR_C
VAR_C=final_value

# Complex paths
HOME=/users/developer
PROJECT_ROOT=$HOME/projects/myapp
CONFIG_PATH=${PROJECT_ROOT}/config
LOG_PATH=${PROJECT_ROOT}/logs
DATA_PATH=$PROJECT_ROOT/data

# Build paths
SRC_DIR=./src
BUILD_DIR=./build
DIST_DIR=./dist
ASSETS_PATH=${BUILD_DIR}/assets
STATIC_URL=${BASE_URL}/static